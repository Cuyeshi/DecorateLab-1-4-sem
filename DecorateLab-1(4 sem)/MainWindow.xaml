<Window x:Class="StreamDecoratorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream Decorator Demo" Width="400" Height="300">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Write to File" Click="WriteToFile_Click" Margin="5"/>
            <Button Content="Write to Memory" Click="WriteToMemory_Click" Margin="5"/>
            <Button Content="Write to Buffered" Click="WriteToBuffered_Click" Margin="5"/>
            <TextBlock x:Name="TotalBytesWrittenText" Text="Total Bytes Written: 0" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
